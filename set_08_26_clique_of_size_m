#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>

#define MAX 20  // Adjust this for testing small graphs

int graph[MAX][MAX];
int n, e, m;

// Function to check if given vertices form a clique
bool isClique(int vertices[], int size) {
    for (int i = 0; i < size; i++) {
        for (int j = i + 1; j < size; j++) {
            if (graph[vertices[i]][vertices[j]] == 0)
                return false; // Missing edge
        }
    }
    return true;
}

// Recursive utility to generate all combinations of vertices
bool findClique(int start, int depth, int vertices[]) {
    if (depth == m) {
        if (isClique(vertices, m))
            return true;
        return false;
    }

    for (int i = start; i < n; i++) {
        vertices[depth] = i;
        if (findClique(i + 1, depth + 1, vertices))
            return true;
    }
    return false;
}

int main() {
    printf("Enter number of vertices (n): ");
    scanf("%d", &n);
    printf("Enter number of edges (e): ");
    scanf("%d", &e);
    printf("Enter clique size (m): ");
    scanf("%d", &m);

    // Initialize adjacency matrix
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            graph[i][j] = 0;

    printf("Enter edges (u v):\n");
    for (int i = 0; i < e; i++) {
        int u, v;
        scanf("%d%d", &u, &v);
        graph[u][v] = graph[v][u] = 1;
    }

    int vertices[MAX];
    if (findClique(0, 0, vertices))
        printf("Graph contains a clique of size %d.\n", m);
    else
        printf("Graph does NOT contain a clique of size %d.\n", m);

    return 0;
}
