#include <stdio.h>
#include <string.h>
#define NO_OF_CHARS 256

// Function to create the bad character table
void badCharHeuristic(char pattern[], int m, int badchar[]) {
    int i;

    // Initialize all occurrences as -1
    for (i = 0; i < NO_OF_CHARS; i++)
        badchar[i] = -1;

    // Fill the actual occurrences of characters in the pattern
    for (i = 0; i < m; i++)
        badchar[(int)pattern[i]] = i;
}

// Boyer-Moore Search (Bad Character Rule)
void boyerMooreSearch(char pattern[], char text[]) {
    int m = strlen(pattern);
    int n = strlen(text);

    int badchar[NO_OF_CHARS];

    // Preprocess the pattern
    badCharHeuristic(pattern, m, badchar);

    int shift = 0;  // shift of the pattern over text

    while (shift <= (n - m)) {
        int j = m - 1;

        // Move from rightmost character of pattern
        while (j >= 0 && pattern[j] == text[shift + j])
            j--;

        // If pattern fully matched
        if (j < 0) {
            printf("Pattern found at index %d\n", shift);

            // Shift pattern to align the next window
            shift += (shift + m < n) ? m - badchar[(int)text[shift + m]] : 1;
        }
        else {
            // Shift based on bad character
            int bad = text[shift + j];
            shift += (j - badchar[bad] > 1) ? (j - badchar[bad]) : 1;
        }
    }
}

int main() {
    char text[200], pattern[100];

    printf("Enter text: ");
    gets(text);

    printf("Enter pattern: ");
    gets(pattern);

    boyerMooreSearch(pattern, text);

    return 0;
}
